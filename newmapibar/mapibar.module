/**
 *
 * @param
 *  type $var lo que se va a juntar
 * @return
 *  string lo juntado
 */
function mapibar_joiner($var) {
    $var = str_replace(',', '<br />', $var);
    return $var;
}
function mapibar_joiner_socials($var) {
    $var = str_replace(',', '', $var);
    return $var;
}

